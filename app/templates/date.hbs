
<div class="container">
  <div class="row page-header">
    <div class="col-md-12">
      <h1>Contests <small>{{model.date}}</small></h1>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <h2>FanDuel</h2>
      <h3>MLB</h3>
      <ul>
        {{#each model.fanduelMlbContests as |contest|}}
          {{#link-to contest.sport contest}}
            {{contest.name}}
          {{/link-to}}
        {{else}}
          No contests on {{model.shortDate}}
