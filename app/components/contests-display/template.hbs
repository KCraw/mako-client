{{#each contests as |site|}}
  <div class="col-md-6">
    <h2>{{site.name}}</h2>
    {{#each site.contests as |sport|}}
      <h3>{{sport.name}}</h3>
      <ul class="list-unstyled">
        {{#each sport.list as |contest|}}
          <li>{{#link-to contest.sport contest}}{{site-name contest.site}} {{et-date contest.startTime format="ddd MM/DD/YYYY h:mmA"}} ET ({{contest.slotName}}){{/link-to}}</li>
        {{else}}
          <li>No upcoming contests</li>
        {{/each}}
      </ul>
    {{/each}}
  </div>
{{/each}}
